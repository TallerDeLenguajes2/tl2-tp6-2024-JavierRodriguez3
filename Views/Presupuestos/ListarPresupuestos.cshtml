@using presupuestos
@model List<Presupuestos>;


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <!-- Incluyendo CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">Lista de Presupuestos</h2>
        <div class="container mt-5">
            <div class="d-flex gap-2">
                <h2>
                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Presupuestos"
                        asp-action="CrearPresupuestos">Crear Presupuesto</a>
                </h2>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID Presupuesto</th>
                    <th scope="col">Nombre Del Destinatario</th>
                    <th scope="col">Fecha de Creacion</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.IdPresupuesto</th>
                        <td>@item.NombreDestinatario</td>
                        <td>@item.FechaCreacion</td>
                        <td><a class="btn btn-primary text-white" asp-area="" asp-controller="Presupuestos"
                        asp-action="ListarDetallesPresupuestos" method="get" asp-route-id="@item.IdPresupuesto">Detalles</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Incluyendo JavaScript de Bootstrap y dependencias -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>