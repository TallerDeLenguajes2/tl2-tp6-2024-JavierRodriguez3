@using presupuestos;
@model Presupuestos;


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Producto</title>
    <!-- Incluyendo CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h2>Crear Nuevo Producto</h2>
    <form asp-action="CrearPresupuestos" method="post">
    <div class="form-group">
        <label asp-for="IdPresupuesto">ID del Presupuesto</label>
        <input asp-for="IdPresupuesto" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="NombreDestinatario">Nombre del Destinatario</label>
        <input asp-for="NombreDestinatario" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha de Creacion del Presupuesto</label>
        <input asp-for="FechaCreacion" class="form-control" type="string" required />
    </div>
    <div class="form-group">
        <label>Id del Producto</label>
        <input name="Detalle[0].Producto.IdProducto" class="form-control" type="string" required />
    </div>
    <div class="form-group">
        <label>Cantidad de Productos</label>
        <input name="Detalle[0].Cantidad" class="form-control" type="number" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
        <a asp-action="ListarPresupuestos" class="btn btn-secondary">Cancelar</a>
    </div>

</form>
</div>

<!-- Incluyendo JavaScript de Bootstrap y dependencias para validaciÃ³n -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
