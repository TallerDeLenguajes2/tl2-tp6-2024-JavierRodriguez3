@using productos

@model List<Productos>;

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <!-- Incluyendo CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">Lista de Usuarios</h2>
        <div class="container mt-5">
            <div class="d-flex gap-2">
                <h2>
                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Productos"
                        asp-action="CrearProductos">Crear Producto</a>
                </h2>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID Producto</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.IdProducto</th>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio</td>
                        <td><a class="btn btn-primary text-white" asp-area="" asp-controller="Productos"
                        asp-action="ModificarProductos" method="get" asp-route-id="@item.IdProducto">Modificar Producto</a>
                        <a class="btn btn-danger text-white" asp-area="" asp-controller="Productos"
                        asp-action="EliminarProductos" method="get" asp-route-id="@item.IdProducto">Eliminar Producto</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Incluyendo JavaScript de Bootstrap y dependencias -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>