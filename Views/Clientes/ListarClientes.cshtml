@using clientes
@model List<Clientes>;


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <!-- Incluyendo CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4">Lista de Clientes</h2>
        <div class="container mt-5">
            <div class="d-flex gap-2">
                <h2>
                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Clientes"
                        asp-action="CrearCliente">Crear Clientes</a>
                </h2>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID Cliente</th>
                    <th scope="col">Nombre Del Cliente</th>
                    <th scope="col">Email Del Cliente</th>
                    <th scope="col">Telefono Del Cliente</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ClienteId</th>
                        <td>@item.NombreCliente</td>
                        <td>@item.EmailCliente</td>
                        <td>@item.TelefonoCliente</td>
                        <td><a class="btn btn-primary text-white" asp-area="" asp-controller="Clientes"
                        asp-action="ModificarCliente" method="get" asp-route-id="@item.ClienteId">Modificar</a>
                        <a class="btn btn-danger  text-white" asp-area="" asp-controller="Clientes"
                        asp-action="EliminarCliente" method="get" asp-route-id="@item.ClienteId">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Incluyendo JavaScript de Bootstrap y dependencias -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>