@using clientes;
@model Clientes;

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Producto</title>
    <!-- Incluyendo CSS de Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h2>Modificar el Producto</h2>
    <form asp-action="ModificarCliente" method="post">
    <div class="form-group">
        <label asp-for="@Model.ClienteId">ID del Producto</label>
        <input asp-for="@Model.ClienteId" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NombreCliente">Nombre</label>
        <input asp-for="@Model.NombreCliente" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EmailCliente">Email</label>
        <input asp-for="@Model.EmailCliente" class="form-control" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="@Model.TelefonoCliente">Telefono</label>
        <input asp-for="@Model.TelefonoCliente" class="form-control" type="number" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Producto</button>
        <a asp-action="ObtenerClientes" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
</div>

<!-- Incluyendo JavaScript de Bootstrap y dependencias para validaciÃ³n -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
